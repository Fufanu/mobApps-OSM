<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal"
    android:visibility="visible" >

    <Spinner
        android:id="@+id/fSettings_DropDown_Files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fSettings_Button_DeleteFile" />

    <Button
        android:id="@+id/fSettings_Button_DeleteFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/fSettings_Button_DeleteFile_Text" />

    <EditText
        android:id="@+id/fSettings_DisplayFileSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fSettings_DropDown_Files"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="15" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/fSettings_Button_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fSettings_DisplayFileSource"
        android:layout_centerHorizontal="true"
        android:text="@string/fSettings_Button_Save_Text" />

</RelativeLayout>